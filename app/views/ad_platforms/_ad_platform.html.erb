<div id="<%= dom_id ad_platform %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= ad_platform.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ad platform", ad_platform, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this ad platform', edit_ad_platform_path(ad_platform), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
